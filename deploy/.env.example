# =============================================================
#  CorrectionFIELD — Environment variables
#  Copy to .env and fill in real values before `docker compose up`
# =============================================================

# ── Domain ──────────────────────────────────────────
# Your domain pointing to this server (A record → VM external IP)
DOMAIN=api.example.com

# Public-facing URLs (Caddy will handle TLS)
API_EXTERNAL_URL=https://api.example.com
SITE_URL=https://app.example.com

# ── Database ────────────────────────────────────────
POSTGRES_PASSWORD=CHANGE_ME_super_secure_password_here

# ── JWT ─────────────────────────────────────────────
# MUST be at least 32 chars. Generate with: openssl rand -base64 48
JWT_SECRET=CHANGE_ME_your_jwt_secret_at_least_32_characters_long
JWT_EXPIRY=3600

# ── Supabase keys ───────────────────────────────────
# Generate these from JWT_SECRET using https://supabase.com/docs/guides/self-hosting/docker#generate-api-keys
# Or use the supabase CLI: supabase gen keys --jwt-secret "YOUR_JWT_SECRET"
ANON_KEY=CHANGE_ME_anon_key
SERVICE_ROLE_KEY=CHANGE_ME_service_role_key

# ── Auth settings ───────────────────────────────────
DISABLE_SIGNUP=false
ENABLE_EMAIL_SIGNUP=true
ENABLE_EMAIL_AUTOCONFIRM=true

# ── SMTP (optional — for email confirmation) ───────
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_ADMIN_EMAIL=admin@correctionfield.local

# ── Realtime ────────────────────────────────────────
REALTIME_ENC_KEY=supabaserealtime
REALTIME_SECRET_KEY_BASE=CHANGE_ME_generate_with_openssl_rand_base64_48

# ── Redirect URLs (comma separated, optional) ──────
ADDITIONAL_REDIRECT_URLS=
